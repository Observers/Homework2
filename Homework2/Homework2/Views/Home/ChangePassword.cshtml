
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheet
{
    <link rel="stylesheet" href="~/css/sidenavfixed.css" />
}

@section header 
{
    @{await Html.RenderPartialAsync("_NavBar");}
}

@section sidenav
{
    @{await Html.RenderPartialAsync("_SideNav");}
}

<div class="row">
    <h5>@ViewData["Title"]</h5>
</div>

<form action="#" method="post">
    <div class="row">
        <div class="input-field col s3">
            <input id="username" type="text" />
            <label for="username">Username</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
            <input id="cur_password" type="password" />
            <label for="cur_password">Current Password</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
            <input id="new_password" type="password" />
            <label for="new_password">New Password</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s3">
            <input id="new_password2" type="password" />
            <label for="new_password2">Retype New Password</label>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s2">
                <button class="btn waves-effect waves-light" type="submit">
                    Save
                </button>
            </div>

            <div class="col s2">
                <a class="waves-effect waves-light btn">Back</a>
            </div>
        </div>
    </div>
</form>