
@{
    ViewData["Title"] = "User Modify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheet
{
    <link rel="stylesheet" href="~/css/sidenavfixed.css" />
}

@section header
{
    @{await Html.RenderPartialAsync("_NavBar");}
}

@section sidenav
{
    @{await Html.RenderPartialAsync("_SideNav");}
}

<form>
    <div class="row">
        <div class="input-field col s6">
            <input id="user" type="text" class="validate">
            <label for="user">User</label>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s1">
                <h6>Role</h6>
            </div>
            <div class="col s3">
                <select>
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">GSYADM</option>
                    <option value="2">GADM</option>
                    <option value="3">GOWNDER</option>
                    <option value="4">Contactor</option>
                    <option value="5">Other</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s1">
                <h6>Status</h6>
            </div>
            <div class="col s3">
                <select>
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">Y</option>
                    <option value="2">N</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s2">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Save
                </button>
            </div>
            <div class="col s2">
                <a class="waves-effect waves-light btn">Back</a>
            </div>
        </div>
    </div>
</form>