
@{
    ViewData["Title"] = "RoleAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheet
{
    <link rel="stylesheet" href="~/css/sidenavfixed.css" />
}

@section header
{
    @{await Html.RenderPartialAsync("_NavBar");}
}

@section sidenav
{
    @{await Html.RenderPartialAsync("_SideNav");}
}

<form>
    <div class="row">
        <div class="col s12">
            <div class="input-field col s6">
                <input id="role" type="text" class="validate">
                <label for="role">Role</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="input-field col s6">
                <input id="role_descrip" type="text" class="validate">
                <label for="role_descrip">Role Description</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="input-field col s3">
                <select>
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">Y</option>
                    <option value="2">N</option>
                </select>
                <label>Status</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s2">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Add
                </button>
            </div>
            <div class="col s2">
                <a class="waves-effect waves-light btn">Back</a>
            </div>
        </div>
    </div>
</form>
