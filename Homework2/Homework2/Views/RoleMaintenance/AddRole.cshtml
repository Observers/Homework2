
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Profile/Index");
    }
}

@section stylesheet
{
    <link rel="stylesheet" href="~/Static/css/sidenavfixed.css" />
}

@section navbar {
    <div class="col s12">
        <a href="@Url.Action("RoleMaintenance", "SystemSetup")" class="breadcrumb">Role Maintenance</a>
        <a href="@Url.Action("AddMenu", "RoleMaintenance")" class="breadcrumb">Add</a>
    </div>
}

@section sidenav {
    @{Html.RenderPartial("_SideNav");}
}

@section scripts {
    <script src="~/Static/js/modifyMenu.js" asp-append-version="true"></script>
}

<div class="row">
    <h5 class="center-align">@ViewData["Title"]</h5>
</div>

@using (Html.BeginForm("AddRole", "RoleMaintenance", FormMethod.Post))
{
    <div class="row">
        <div class="input-field col s12 m6 offset-m3">
            <input id="roleName" name="roleName" type="text" required class="validate">
            <label for="roleName">Role</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12 m6 offset-m3">
            <input id="role_descrip" name="description" required type="text" class="validate">
            <label for="role_descrip">Role Description</label>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12 m6 offset-m3">
            <select name="selectStatus" required>
                <option value="" disabled selected>Choose your option</option>
                <option value="1">Y</option>
                <option value="2">N</option>
            </select>
            <label>Status</label>
        </div>
    </div>

    <div class="row">
        <div class="col s12 m4 offset-m4">
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Add
            </button>
            <button class="btn waves-effect waves-light " onclick="history.back()">
                Back
            </button>
        </div>
    </div>
}