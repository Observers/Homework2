
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["userID"] == null)
    {
        Response.Redirect("~/Profile/Index");
    }
}

@section stylesheet
{
    <link rel="stylesheet" href="~/Static/css/sidenavfixed.css" />
}

@section header {
    @{Html.RenderPartial("_NavBar");}
}

@section sidenav {
    @{Html.RenderPartial("_SideNav");}
}

@section scripts {
    <script src="~/Static/js/modifyMenu.js" asp-append-version="true"></script>
}

<div class="row">
    <h5 class="center-align">@ViewData["Title"]</h5>
</div>

@using (Html.BeginForm("AddRole", "SystemSetup", FormMethod.Post))
{
    <div class="row">
        <div class="col s12">
            <div class="input-field col col s4 offset-s4">
                <input id="role" name="role" type="text" required class="validate">
                <label for="role">Role</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="input-field col s4 offset-s4">
                <input id="role_descrip" name="description" type="text" class="validate">
                <label for="role_descrip">Role Description</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="input-field col col s4 offset-s4">
                <select name="selectStatus">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">Y</option>
                    <option value="2">N</option>
                </select>
                <label>Status</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="col s2 offset-s4">
                <button class="btn waves-effect waves-light" type="submit" name="action">
                    Add
                </button>
            </div>
            <div class="col s2">
                <button class="btn waves-effect waves-light " onclick="history.back()">Back</button>
            </div>
        </div>
    </div>
}