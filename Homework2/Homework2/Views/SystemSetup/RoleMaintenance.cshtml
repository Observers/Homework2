
@{
    ViewBag.Title = "RoleMaintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section stylesheet
{
    <link rel="stylesheet" href="~/Static/css/sidenavfixed.css" />
}

@section header {
    @{Html.RenderPartial("_NavBar");}
}

@section sidenav {
    @{Html.RenderPartial("_SideNav");}
}

@section scripts {
    <script src="~/Static/js/roleMaintenance.js" asp-append-version="true"></script>
}

<div class="row">
    <h5>@ViewData["Title"]</h5>
</div>

<div class="row">
    <div class="input-field col s6">
        <select>
            <option value="" disabled selected>Choose your option</option>
            @foreach (var role in Model)
            {
                <option value="@role.roleID">@role.role</option>
            }
        </select>
        <label>Role</label>
    </div>
</div>

<div class="row">
    <table class="highlight">
        <thead>
            <tr>
                <th>
                    <label>
                        <input type="checkbox" class="filled-in" onClick="toggle(this)" />
                        <span></span>
                    </label>
                </th>
                <th>Role</th>
                <th>Role Description</th>
                <th>Status</th>
                <th>Create Date</th>
                <th>Create User</th>
                <th>Modify Date</th>
                <th>Modify User</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <label>
                            <input value="@item.roleID" type="checkbox" class="filled-in" name="checkbox" />
                            <span></span>
                        </label>
                    </td>

                    <td>@item.role</td>
                    <td>@item.description</td>

                    @if (@item.status)
                    {
                        <td>Y</td>
                    }
                    else
                    {
                        <td>N</td>
                    }

                    <td>@item.createDate.ToString("yyyy/MM/dd")</td>
                    <td>@item.createUser</td>
                    <td>@item.modifyDate.ToString("yyyy/MM/dd")</td>
                    <td>@item.modifyUser</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="fixed-action-btn">
    <a class="btn-floating btn-large red pulse ">
        <i class="large material-icons">edit</i>
    </a>
    <ul>
        <li>
            <a class="btn-floating red tooltipped" data-position="left" data-tooltip="Query">
                <i class="material-icons">search</i>
                Query
            </a>
        </li>
        <li>
            <a class="btn-floating yellow darken-1 tooltipped" data-position="left" data-tooltip="Add">
                <i class="material-icons">add</i>
                Add
            </a>
        </li>
        <li>
            <a class="btn-floating green tooltipped" data-position="left" data-tooltip="Modify">
                <i class="material-icons">mode_edit</i>
                Modify
            </a>
        </li>
        <li>
            <a class="btn-floating blue tooltipped" data-position="left" data-tooltip="Menu">
                <i class="material-icons">menu</i>
                Menu
            </a>
        </li>
        <li>
            <a class="btn-floating blue tooltipped" data-position="left" data-tooltip="Delete">
                <i class="material-icons">delete</i>
                Delete
            </a>
        </li>
    </ul>
</div>
